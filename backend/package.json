{
  "name": "oqc-backend",
  "version": "1.0.0",
  "description": "Backend API para Registro de Salidas OQC - Ilsan Electronics",
  "main": "src/server.js",
  "bin": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "pkg . --targets node18-win-x64 --output dist/oqc-backend.exe --compress GZip"
  },
  "pkg": {
    "assets": [
      "src/**/*"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "pkg": "^5.8.1"
  }
}
